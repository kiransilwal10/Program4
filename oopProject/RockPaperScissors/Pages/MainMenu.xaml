<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockPaperScissors.Pages.MainMenu"
             BackgroundColor="Grey">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*" VerticalOptions="Center">

        <Button Grid.Row="1" Text="New Game"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnNewGameClicked"/>

        <Button Grid.Row="2" Text="Statistics"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnStatisticsClicked"/>

        <Button Grid.Row="3" Text="Exit"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnExitClicked"/>
    </Grid>

</ContentPage>