<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockPaperScissors.Pages.Statistics"
             BackgroundColor="Grey">
    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*" VerticalOptions="Center">
        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="20" Padding="20">
            <Label x:Name="TotalGamesLabel" FontSize="24" TextColor="White" HorizontalOptions="Center" />
            <Label x:Name="PlayerWinsLabel" FontSize="24" TextColor="White" HorizontalOptions="Center" />
            <Label x:Name="AIWinsLabel" FontSize="24" TextColor="White" HorizontalOptions="Center" />
            <Label x:Name="PlayerChoiceLabel" FontSize="24" TextColor="White" HorizontalOptions="Center" />
            <Label x:Name="DrawsLabel" FontSize="24" TextColor="White" HorizontalOptions="Center" />
        </VerticalStackLayout>
        <Button Grid.Row="2" Grid.Column="0" Text="Main Menu" FontSize="18" TextColor="White" BackgroundColor="#00C5C8" Clicked="GoToMainMenu"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
         />
    </Grid>
</ContentPage>