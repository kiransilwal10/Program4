<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RockPaperScissors.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RockPaperScissors.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="RockPaperScissors">

    <ShellContent
        Title="MainMenu"
        ContentTemplate="{DataTemplate local:MainMenu}"
        Route="MainMenu" />
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate local:Game}"
        Route="Game" />
    <ShellContent
        Title="Statistics"
        ContentTemplate="{DataTemplate local:Statistics}"
        Route="Statistics" />


</Shell>
